<div class="container has-background-primary-light is-fullheight">
      <div class="hero is-medium">
        <h1 class="is-size-1 has-text-centered has-text-weight-bold">Edit Post</h1>
          <form class="hero-body columns edit-post-form">
              <div class="column box has-background-info-light">
                  <div class="label">
                      <label for="post-title"> Post Title:</label>
                      <input class="input is-dark" type="text" name="post-title" value="{{post.title}}" />
                  </div>
                  <div class="label">
                      <label for="post-content">Post Content:</label>
                      <input class="textarea is-large is-dark" name="post-content" value="{{post.post._content}}" />
                  </div>
                  <div class="is-pulled-right">
                      created by you on {{format_date post.created_at}}
                      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}} {{> comments post.comments}}</a>
                  </div>
                  <div class="column">
                      <button class="button has-background-primary-dark has-text-primary-light is-pulled-right" type="submit">Save Post</button>
                      <button type="button" class="button has-background-primary-dark has-text-primary-light is-pulled-right delete-post-btn">Delete Post</button>
                  </div>
              </div>
          </form>
      </div>
  </div>



  <script src="/js/edit-post.js"></script>
  <script src="/js/delete-post.js"></script>